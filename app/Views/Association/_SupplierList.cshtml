@using System.Web.UI.WebControls
@using Marketing.ViewModels
@model AssociationEditViewModel
@{
	var name = Html.IdFor(m => m.SupplierId).ToString();
}
@Html.DevExpress().ComboBox(settings =>
{
    settings.Name = name;
    settings.Width = 180;
    settings.Properties.DropDownWidth = 400;
    settings.Properties.DropDownStyle = DropDownStyle.DropDownList;
    settings.CallbackRouteValues = new { Controller = "Association", Action = "SupplierList", id = Model.AssociationId };
    settings.Properties.CallbackPageSize = 30;
    settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.Contains;
    settings.Properties.TextFormatString = "{0}";
    settings.Properties.ValueField = "Id";
    settings.Properties.ValueType = typeof(uint);

    settings.Properties.Columns.Add("Name", "Наименование", Unit.Percentage(50));
    settings.Properties.Columns.Add("FullName", "Полное наименование", Unit.Percentage(50));
}).BindList(Model.AvailableSuppliers).Bind(Model.SupplierId).GetHtml()

