@using Marketing.ViewModels
@model List<MembersGridViewModel>
@{
	ViewBag.Title = "Участники акций";
	var regions = (List<ViewModelListItem>)ViewBag.AvailableRegions;
}

<div class="form-group">
    <ol class="breadcrumb">
        <li>
            <a href="@Url.Action("Index", "Home")">Меню</a>
        </li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</div>
<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("Index", "Members", FormMethod.Post))
{
<div class="form-group">
    <div class="pull-left">
        @Html.Partial("../_default/RegionsFilterData", regions)
        @Html.Partial("../_default/RegionsFilterLogic", regions)
    </div>
    <button type="submit" class="btn btn-xs btn-default pull-left">Отобрать</button>
</div>
<div class="clearfix"></div>
}
<hr />
<div class="form-group">
    @Html.ActionLink("Добавить", "Add", "Members", null, new { @class = "btn btn-primary" })
</div>

<div class="form-group">
    @Html.Partial("GridView", Model)
</div>
