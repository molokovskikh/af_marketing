@using System.Web.UI.WebControls
@using Marketing.ViewModels
@model PromotionFromPriceViewModel
@Html.DevExpress().GridView(settings =>
{
    settings.Name = "gridSuppliers";
    settings.CallbackRouteValues = new { Action = "GetSuppliersList", Controller = "Marketing", Id = Model.PromotionId };
    settings.KeyFieldName = "Id";
    settings.PreviewEncodeHtml = false;
    settings.EncodeHtml = false;
    settings.Width = Unit.Percentage(100);

    settings.CommandColumn.Visible = true;
    settings.CommandColumn.Width = Unit.Pixel(30);
    settings.CommandColumn.ShowSelectCheckbox = true;
    settings.CommandColumn.SelectAllCheckboxMode = GridViewSelectAllCheckBoxMode.AllPages;

    settings.ClientSideEvents.SelectionChanged = "switchSuppliers";
    settings.ClientSideEvents.Init = "suppliersInit";

    settings.Columns.Add(column =>
    {
        column.FieldName = "Name";
        column.Caption = "Наименование";
        column.PropertiesEdit.EncodeHtml = false;
    });

    settings.SettingsBehavior.AllowFocusedRow = true;
    settings.SettingsSearchPanel.Visible = true;
    settings.SettingsPager.PageSize = 50;
    settings.SettingsPager.Mode = GridViewPagerMode.EndlessPaging;
}).Bind(Model.AvailableSuppliers).GetHtml()
