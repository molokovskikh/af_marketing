@using Marketing.ViewModels
@model Marketing.ViewModels.PromoterProducersViewModel

@{
  ViewBag.Title = "Добавление производителя";
  List<ViewModelListItem> currentProducers = Model.ProducersList;
}

<div class="form-group">
    <ol class="breadcrumb">
        <li>
            <a href="@Url.Action("Index", "Home")">Меню</a>
        </li>
        <li>
            <a href="@Url.Action("Index", "Marketing")">Маркетинговые мероприятия</a>
        </li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</div>
<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("ProducerAdd", "Marketing", FormMethod.Post, new {@class = "form-horizontal", role = "form"})) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new {@class = "text-danger"})
<div class="form-group">
    @Html.LabelFor(m => m.SelectedProducerId, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.HiddenFor(model => model.SelectedProducerId)
        <script type="text/javascript">
            var callbackInitDate;

            function SelectedIndexChanged(s, e) {
                var currentValue = s.GetValue();
                $("[name='SelectedProducerId']").val(currentValue);
            }
        </script>
        @Html.Partial("../_default/ProducerAddFilter", currentProducers)

    </div>
</div>
    <div class="form-group">
        @Html.LabelFor(m => m.Contacts, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Contacts, new {@class = "form-control"})
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Добавить"/>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}